<%- include('../partials/header') %>

<% if (dueReminders && dueReminders.length > 0) { %>
  <div class="alert alert-info alert-dismissible fade show" role="alert">
    <h5><i class="fas fa-bell"></i> Exercise Reminders</h5>
    <ul class="mb-0">
      <% dueReminders.forEach(reminder => { %>
        <li>
          <strong><%= reminder.time %></strong> - Time for your exercises!
          <a href="/patient/exercises" class="alert-link">View Exercises</a>
        </li>
      <% }) %>
    </ul>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<h1 class="mb-4">Welcome, <%= user.profile.firstName %>!</h1>
<!-- rest of your code stays the same -->
  <!-- Therapist Card -->
  <div class="col-md-4 mb-4">
    <div class="card h-100">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">My Therapist</h5>
      </div>
      <div class="card-body">
        <% if (therapist) { %>
          <h5><%= therapist.profile.firstName %> <%= therapist.profile.lastName %></h5>
          <p class="text-muted"><%= therapist.email %></p>
          <a href="/messages/<%= therapist._id %>" class="btn btn-primary w-100">
            Send Message
          </a>
        <% } else { %>
          <p class="text-muted">No therapist assigned yet.</p>
          <p>Please wait for a therapist to be assigned to you.</p>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="col-md-4 mb-4">
    <div class="card h-100">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0">Exercise Plan</h5>
      </div>
      <div class="card-body">
        <% if (activePlan && activePlan.exercises.length > 0) { %>
          <h3><%= activePlan.exercises.length %></h3>
          <p>Exercises in your plan</p>
          <a href="/patient/exercises" class="btn btn-success w-100">View Exercises</a>
        <% } else { %>
          <p class="text-muted">No active exercise plan.</p>
          <p>Your therapist will create a plan for you.</p>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Messages -->
  <div class="col-md-4 mb-4">
    <div class="card h-100">
      <div class="card-header bg-info text-white">
        <h5 class="mb-0">Messages</h5>
      </div>
      <div class="card-body">
        <p>Stay in touch with your therapist</p>
        <a href="/messages" class="btn btn-info w-100 text-white">View Messages</a>
      </div>
    </div>
  </div>
</div>

<!-- Recent Activity -->
<div class="row mt-4">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Recent Activity</h5>
      </div>
      <div class="card-body">
        <% if (recentLogs && recentLogs.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Exercise</th>
                  <th>Date</th>
                  <th>Pain Level</th>
                  <th>Difficulty</th>
                </tr>
              </thead>
              <tbody>
                <% recentLogs.forEach(log => { %>
                  <tr>
                    <td><%= log.exerciseId ? log.exerciseId.name : 'Unknown' %></td>
                    <td><%= new Date(log.completedAt).toLocaleDateString() %></td>
                    <td><%= log.painLevel || 'N/A' %></td>
                    <td><%= log.difficultyRating || 'N/A' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <a href="/patient/progress" class="btn btn-outline-primary">View Full Progress</a>
        <% } else { %>
          <p class="text-muted">No exercises completed yet. Start your recovery journey today!</p>
          <a href="/patient/exercises" class="btn btn-primary">View Exercises</a>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>