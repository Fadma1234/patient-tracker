<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Unassigned Patients</h1>
  <a href="/therapist/patients" class="btn btn-outline-secondary">Back to My Patients</a>
</div>

<% if (patients && patients.length > 0) { %>
  <div class="row">
    <% patients.forEach(patient => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">
              <%= patient.profile.firstName %> <%= patient.profile.lastName %>
            </h5>
            <p class="card-text text-muted"><%= patient.email %></p>
            
            <form action="/therapist/assign-patient/<%= patient._id %>" method="POST">
              <button type="submit" class="btn btn-success w-100">
                Assign to Me
              </button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <div class="alert alert-info">
    No unassigned patients at this time.
  </div>
<% } %>

<%- include('../partials/footer') %>