<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>My Patients</h1>
  <a href="/therapist/unassigned-patients" class="btn btn-success">+ Assign New Patient</a>
</div>

<% if (patients && patients.length > 0) { %>
  <div class="row">
    <% patients.forEach(patient => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">
              <%= patient.profile.firstName %> <%= patient.profile.lastName %>
            </h5>
            <p class="card-text text-muted"><%= patient.email %></p>
            <% if (patient.profile.phoneNumber) { %>
              <p class="card-text"><small>Phone: <%= patient.profile.phoneNumber %></small></p>
            <% } %>
          </div>
          <div class="card-footer bg-transparent">
            <div class="d-grid gap-2">
              <a href="/therapist/patients/<%= patient._id %>" class="btn btn-primary btn-sm">View Details</a>
              <a href="/messages/<%= patient._id %>" class="btn btn-info btn-sm text-white">Send Message</a>
              <a href="/therapist/plans/new/<%= patient._id %>" class="btn btn-success btn-sm">Create Plan</a>
              <form action="/therapist/unassign-patient/<%= patient._id %>" method="POST" class="mt-2">
                <button type="submit" class="btn btn-outline-danger btn-sm w-100" onclick="return confirm('Are you sure you want to unassign this patient?')">
                  Unassign Patient
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <div class="alert alert-info">
    No patients assigned yet. 
    <a href="/therapist/unassigned-patients">Find patients to assign</a>.
  </div>
<% } %>

<%- include('../partials/footer') %>