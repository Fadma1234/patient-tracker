<%- include('../partials/header') %>

<h1 class="mb-4">Welcome, <%= user.profile.firstName %>!</h1>

<div class="row mb-4">
  <!-- Quick Actions -->
  <div class="col-md-3 mb-3">
    <div class="card bg-primary text-white h-100">
      <div class="card-body text-center">
        <h3><%= patients ? patients.length : 0 %></h3>
        <p class="mb-0">My Patients</p>
      </div>
      <div class="card-footer bg-transparent border-0">
        <a href="/therapist/patients" class="btn btn-light w-100">View All</a>
      </div>
    </div>
  </div>

  <div class="col-md-3 mb-3">
    <div class="card bg-success text-white h-100">
      <div class="card-body text-center">
        <i class="fas fa-user-plus fa-2x mb-2"></i>
        <p class="mb-0">Find Patients</p>
      </div>
      <div class="card-footer bg-transparent border-0">
        <a href="/therapist/unassigned-patients" class="btn btn-light w-100">Assign New</a>
      </div>
    </div>
  </div>

  <div class="col-md-3 mb-3">
    <div class="card bg-info text-white h-100">
      <div class="card-body text-center">
        <i class="fas fa-dumbbell fa-2x mb-2"></i>
        <p class="mb-0">Exercises</p>
      </div>
      <div class="card-footer bg-transparent border-0">
        <a href="/therapist/exercises" class="btn btn-light w-100">Manage</a>
      </div>
    </div>
  </div>

  <div class="col-md-3 mb-3">
    <div class="card bg-warning text-dark h-100">
      <div class="card-body text-center">
        <i class="fas fa-envelope fa-2x mb-2"></i>
        <p class="mb-0">Messages</p>
      </div>
      <div class="card-footer bg-transparent border-0">
        <a href="/messages" class="btn btn-dark w-100">View All</a>
      </div>
    </div>
  </div>
</div>

<!-- My Patients -->
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">My Patients</h5>
    <a href="/therapist/unassigned-patients" class="btn btn-sm btn-success">+ Assign New Patient</a>
  </div>
  <div class="card-body">
    <% if (patients && patients.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% patients.forEach(patient => { %>
              <tr>
                <td><%= patient.profile.firstName %> <%= patient.profile.lastName %></td>
                <td><%= patient.email %></td>
                <td>
                  <a href="/therapist/patients/<%= patient._id %>" class="btn btn-sm btn-outline-primary">View</a>
                  <a href="/messages/<%= patient._id %>" class="btn btn-sm btn-outline-info">Message</a>
                  <a href="/therapist/plans/new/<%= patient._id %>" class="btn btn-sm btn-outline-success">Create Plan</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info mb-0">
        No patients assigned yet. <a href="/therapist/unassigned-patients">Find patients to assign</a>.
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>